			<a class="btn btn-danger" href="{{ path('app_logout') }}">Cerrar sesión</a>
		{% elseif is_granted('ROLE_USER')  %}
			<p class="text-center texto">
				Queremos que nos acompañes el día de nuestra boda.</p>
			<p class="text-center texto">
				Te agradecemos que confirmes tu asistencia</p>
			<a class="btn btn-success" href="{{ path('app_profile_persona', {'id': user.id}) }}">Si asisto</a>
			<a class="btn btn-danger" href="{{ path('app_profile_no_attend', {'id': user.id}) }}">No asisto</a>
		{% endif %}
	</div>
</div>{% endblock %}
