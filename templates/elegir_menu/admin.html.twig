{% extends 'base.html.twig' %}

{% block title %}ElegirMenu index{% endblock %}

{% block body %}
    <h1>ElegirMenu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Menu_name</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for elegir_menu in elegir_menus %}
            <tr>
                <td>{{ elegir_menu.id }}</td>
                <td>{{ elegir_menu.MenuName }}</td>
                <td>{{ elegir_menu.text }}</td>
                <td>
                    <a href="{{ path('app_elegirmenu_show', {'id': elegir_menu.id}) }}">show</a>
                    <a href="{{ path('app_elegirmenu_edit', {'id': elegir_menu.id}) }}">edit</a>
                </td>
            </tr>
